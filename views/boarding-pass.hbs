{{> header}}
<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-12 text-center">
            <h2>{{flightData.from}} → {{flightData.to}}</h2>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12 pb-4">
            <ul class="list-group">
                <li class="list-group-item font-weight-bold">{{flightData.from}} → {{flightData.to}}</li>
                <li class="list-group-item">🙋‍♂️ Passenger: {{userData.fullname}}</li>
                <li class="list-group-item">🕓 {{flightData.departure_time}} → {{flightData.arrival_time}}</li>
                <li class="list-group-item">✈️ Fly #: LO1234</li>
                <li class="list-group-item">💺 Seat: 20F</li>
                <li class="list-group-item">🔢 Reference number: ZXCVBN</li>
                <li class="list-group-item">⚡ Priority: First</li>
                <li class="list-group-item">🚪 Boarding: Back door</li>
                <li class="list-group-item">🧳 Queue: 92</li>
                <li class="list-group-item">🔐 Gate close: 16:35</li>
            </ul>
            <div class="d-flex justify-content-around mt-2 mb-5">
                <img src="/img/boarding-pass.png" class="w-100 align-items-center" />
            </div>
        </div>
    </div>
</div>

{{> footer}}